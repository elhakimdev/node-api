model Activity {
  @@map("activites")
  id  Int @id @default(autoincrement())
  email String  @unique
  title  String
  created_at DateTime
  updated_at DateTime @updatedAt
  deleted_at DateTime?
  todos Todo[]
}

model Todo {
  @@map("todos")
    id Int @id @default(autoincrement())
    title String
    is_active Boolean
    priority String
    created_at DateTime
    updated_at DateTime @updatedAt
    deleted_at DateTime
    activity Activity @relation(fields: [activity_group_id], references: [id])
    activity_group_id Int
}